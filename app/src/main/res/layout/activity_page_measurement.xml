<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageMeasurement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/measurement_txt_title"
            android:gravity="center_horizontal"
            android:background="@drawable/text_bg2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/str_title"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/measurement_txt_date"
            android:gravity="center_horizontal"
            android:background="@drawable/text_bg2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/str_date"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/measurement_txt_temp"
            android:gravity="center_horizontal"
            android:background="@drawable/text_bg2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/str_temperature"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/measurement_txt_typing_title"
                android:background="@drawable/text_bg2"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="@string/str_water_unit"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/measurement_editText_typing"
                android:gravity="center_horizontal"
                android:background="@drawable/text_bg2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/measurement_txt_typing_unit"
                android:background="@drawable/text_bg2"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="@string/str_unit_kgm3"
                android:textSize="25sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/measurement_txt_1"
            android:background="@drawable/text_bg2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/str_water_cl"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/measurement_txt_2"
            android:background="@drawable/text_bg2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/str_CC_summarize"
            android:textSize="25sp" />
        <Button
            android:id="@+id/measurement_btn_start"
            style="style=@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_start_test" />

        <Button
            android:id="@+id/measurement_btn_print"
            style="style=@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_save_print" />

        <Button
            android:id="@+id/measurement_btn_retest"
            style="style=@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_re_test" />
        <Button
            android:id="@+id/measurement_btn_return"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="style=@style/Widget.AppCompat.Button"
            android:text="@string/str_return" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>